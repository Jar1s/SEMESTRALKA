<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="sk.ikts.client.controller.LoginController"
      stylesheets="@../styles/modern.css"
      styleClass="main-background">
   <children>
      <VBox spacing="10" alignment="CENTER" styleClass="card" style="-fx-pref-width: 450;">
         <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
         </padding>
         <children>
            <Label text="ðŸ“š Collaborative Study Platform" styleClass="title-label" style="-fx-font-size: 28px; -fx-text-fill: #667eea;"/>
            <Label text="Welcome! Please sign in or create an account" style="-fx-text-fill: #6c757d; -fx-font-size: 14px;"/>
         </children>
      </VBox>
      
      <VBox spacing="20" styleClass="card" style="-fx-pref-width: 450;">
         <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
         </padding>
         <children>
            <TabPane fx:id="tabPane" prefWidth="390.0" tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane">
              <tabs>
                <Tab fx:id="loginTab" text="ðŸ” Login">
                  <content>
                    <VBox spacing="20.0" style="-fx-padding: 20;">
                      <children>
                        <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <TextField fx:id="loginEmail" promptText="Enter your email" styleClass="modern-text-field"/>
                        
                        <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <PasswordField fx:id="loginPassword" promptText="Enter your password" styleClass="modern-text-field"/>
                        
                        <Label fx:id="loginErrorLabel" textFill="#f5576c" visible="false" style="-fx-font-size: 12px;"/>
                        
                        <Button fx:id="loginButton" mnemonicParsing="false" text="Login" styleClass="modern-button">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                      </children>
                    </VBox>
                  </content>
                </Tab>
                
                <Tab fx:id="registerTab" text="âœ¨ Register">
                  <content>
                    <VBox spacing="20.0" style="-fx-padding: 20;">
                      <children>
                        <Label text="Name:" style="-fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <TextField fx:id="registerName" promptText="Enter your name" styleClass="modern-text-field"/>
                        
                        <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <TextField fx:id="registerEmail" promptText="Enter your email" styleClass="modern-text-field"/>
                        
                        <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <PasswordField fx:id="registerPassword" promptText="Enter your password (min 6 characters)" styleClass="modern-text-field"/>
                        
                        <Label fx:id="registerErrorLabel" textFill="#f5576c" visible="false" style="-fx-font-size: 12px;"/>
                        
                        <Button fx:id="registerButton" mnemonicParsing="false" text="Register" styleClass="success-button">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                      </children>
                    </VBox>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>

