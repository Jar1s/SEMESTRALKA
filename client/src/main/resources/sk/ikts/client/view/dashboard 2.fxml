<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.ikts.client.controller.DashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
         <children>
            <Label fx:id="welcomeLabel" text="Welcome!" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" mnemonicParsing="false" text="Refresh" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button fx:id="createGroupButton" mnemonicParsing="false" text="Create Group" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
         </children>
      </HBox>
      
      <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
         <items>
            <VBox spacing="10.0" style="-fx-padding: 15;">
               <children>
                  <Label text="My Groups" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                  <TableView fx:id="groupsTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="groupNameColumn" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="groupDescriptionColumn" prefWidth="200.0" text="Description" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            
            <VBox spacing="10.0" style="-fx-padding: 15;">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Tasks" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="createTaskButton" mnemonicParsing="false" text="Create Task" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                        <Button fx:id="editTaskButton" mnemonicParsing="false" text="Edit Task" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                     </children>
                  </HBox>
                  <TableView fx:id="tasksTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="taskTitleColumn" prefWidth="200.0" text="Title" />
                        <TableColumn fx:id="taskStatusColumn" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="taskDeadlineColumn" prefWidth="150.0" text="Deadline" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>

