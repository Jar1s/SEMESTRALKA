<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.ikts.client.controller.GroupDetailController"
            stylesheets="@../styles/modern.css"
            styleClass="main-background">
    
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="top-bar">
            <Label fx:id="groupNameLabel" text="Group Name" 
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Back" onAction="#handleBack"
                    styleClass="modern-button"/>
        </HBox>
    </top>
    
    <center>
        <TabPane fx:id="detailTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Tasks Tab -->
                <Tab text="Tasks">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="12" right="12" bottom="12" left="12"/>
                        </padding>
                        <children>
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label text="Group Tasks" 
                                       styleClass="section-label"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="createTaskButton" text="Create Task" 
                                        onAction="#handleCreateTask"
                                        styleClass="modern-button"/>
                            </HBox>
                            
                            <TableView fx:id="tasksTable" prefHeight="400" styleClass="table-view">
                                <columns>
                                    <TableColumn fx:id="taskTitleColumn" text="Title" prefWidth="250"/>
                                    <TableColumn fx:id="taskDeadlineColumn" text="Deadline" prefWidth="120"/>
                                    <TableColumn fx:id="taskActionsColumn" text="Actions" prefWidth="200"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <!-- Resources Tab -->
                <Tab text="Resources">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="12" right="12" bottom="12" left="12"/>
                        </padding>
                        <children>
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label text="Shared Resources" 
                                       styleClass="section-label"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="uploadFileButton" text="Upload File" 
                                        onAction="#handleUploadFile"
                                        styleClass="success-button"/>
                                <Button fx:id="shareUrlButton" text="Share URL" 
                                        onAction="#handleShareUrl"
                                        styleClass="modern-button"/>
                            </HBox>
                            
                            <TableView fx:id="resourcesTable" prefHeight="400" styleClass="table-view">
                                <columns>
                                    <TableColumn fx:id="resourceTitleColumn" text="Title" prefWidth="200"/>
                                    <TableColumn fx:id="resourceTypeColumn" text="Type" prefWidth="100"/>
                                    <TableColumn fx:id="resourceUploadedColumn" text="Uploaded" prefWidth="150"/>
                                    <TableColumn fx:id="resourceActionsColumn" text="Actions" prefWidth="200"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <!-- Chat Tab -->
                <Tab text="Chat">
                    <BorderPane styleClass="main-background">
                        <center>
                            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" vvalue="1.0" style="-fx-background: transparent;">
                                <VBox fx:id="chatMessagesBox" spacing="0" style="-fx-padding: 10; -fx-background-color: #f8f9fa;">
                                    <!-- Messages will be added here -->
                                </VBox>
                            </ScrollPane>
                        </center>
                        <bottom>
                            <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 0 0 10 10;">
                                <TextField fx:id="chatMessageField" promptText="Type your message..." 
                                           HBox.hgrow="ALWAYS" onAction="#handleSendMessage" styleClass="modern-text-field"/>
                                <Button fx:id="sendMessageButton" text="Send" 
                                        onAction="#handleSendMessage"
                                        styleClass="modern-button"/>
                            </HBox>
                        </bottom>
                    </BorderPane>
                </Tab>
                
                <!-- Members Tab -->
                <Tab text="Members">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="12" right="12" bottom="12" left="12"/>
                        </padding>
                        <children>
                            <Label text="Group Members" 
                                   styleClass="section-label"/>
                            
                            <TableView fx:id="membersTable" prefHeight="400">
                                <columns>
                                    <TableColumn fx:id="memberNameColumn" text="Name" prefWidth="200"/>
                                    <TableColumn fx:id="memberRoleColumn" text="Role" prefWidth="100"/>
                                    <TableColumn fx:id="memberActionsColumn" text="Actions" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

